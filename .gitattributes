# .gitattributes for CLMS_documents

# Always keep the target branch's version of .llm_cache during merges
.llm_cache/** merge=ours linguist-generated

# Text files with LF line endings
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf
*.qmd text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.lua text eol=lf

# Images as binary (no diff, case-insensitive)
*.png binary
*.jpg binary
*.jpeg binary
*.svg binary
*.emf binary
*.wmf binary
*.gif binary

# Documents as binary
*.docx binary
*.pdf binary

# Exclude from export/archive
*.env export-ignore
*.bak export-ignore
.llm_cache/ export-ignore
